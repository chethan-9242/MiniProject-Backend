# SwasthVedha Backend Environment Configuration

# Database Configuration (if you're using one)
DATABASE_URL=postgresql://user:password@localhost/swasthvedha

# CORS Configuration
BACKEND_ALLOWED_ORIGINS=http://localhost:3000,https://yourfrontend.com

# Flan-T5 Model Configuration
FLAN_T5_MODEL_NAME=google/flan-t5-large
FLAN_T5_DEVICE=auto  # Options: auto, cuda, cpu
FLAN_T5_MAX_LENGTH=512
FLAN_T5_TEMPERATURE=0.7
FLAN_T5_CACHE_DIR=./models/cache

# Model Performance Settings
FLAN_T5_LOW_CPU_MEM_USAGE=true
FLAN_T5_TORCH_DTYPE=float16  # Options: float16, float32
FLAN_T5_USE_CACHE=true

# API Configuration
API_TITLE=SwasthVedha API
API_VERSION=1.0.0
DEBUG_MODE=false

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Optional: Model fine-tuning configuration
FINE_TUNED_MODEL_PATH=./models/fine_tuned/
TRAINING_DATA_PATH=./data/training/
ENABLE_FINE_TUNING=false