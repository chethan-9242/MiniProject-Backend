# Blockchain Configuration for SwasthVedha
# Copy this to your .env file and update with your values

# Blockchain Network Configuration
BLOCKCHAIN_RPC_URL=http://localhost:8545
BLOCKCHAIN_PRIVATE_KEY=your_private_key_here
BLOCKCHAIN_CHAIN_ID=31337

# IPFS Configuration
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=http://localhost:8080

# Polygon Mumbai Testnet (Alternative)
# BLOCKCHAIN_RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/your_api_key
# BLOCKCHAIN_CHAIN_ID=80001

# Ethereum Mainnet (Production)
# BLOCKCHAIN_RPC_URL=https://mainnet.infura.io/v3/your_project_id
# BLOCKCHAIN_CHAIN_ID=1

# Contract Addresses (will be populated after deployment)
MEDICAL_RECORD_CONTRACT_ADDRESS=
TREATMENT_TRACKING_CONTRACT_ADDRESS=

# Gas Configuration
GAS_LIMIT=2000000
GAS_PRICE_AUTO=true

# Security Settings
ENCRYPTION_ENABLED=true
KEY_DERIVATION_PATH=m/44'/60'/0'/0/0

# Development Settings
DEBUG_MODE=false
MOCK_BLOCKCHAIN=false
